<script>

    function create(data) {
        fetch('/ninja', { method: 'post' })
            .then(response => response.text())
            .then(texto => alert(texto))
            .catch(err => alert(err.message))
    }

    function read(id, data) {
        fetch('/ninja', { method: 'GET' })
            .then(response => response.text())
            .then(texto => alert(texto))
            .catch(err => alert(err.message))
    }

    function readOne(id, data) {
        fetch('/ninja?id=' + id, { method: 'GET' })
            .then(response => response.text())
            .then(texto => alert(texto))
            .catch(err => alert(err.message))
    }

    function update(id, data) {
        fetch('/ninja', { method: 'PUT' })
            .then(response => response.text())
            .then(texto => alert(texto))
            .catch(err => alert(err.message))
    }

    function deleteninja(id) {
        fetch('/ninja?id=' + id, { method: 'DELETE' })
            .then(response => response.text())
            .then(texto => window.location.reload())
            .catch(err => alert(err.message))
    }


</script>

